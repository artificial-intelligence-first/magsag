{
  "name": "@magsag/mcp-server",
  "version": "0.1.0",
  "description": "TypeScript MCP server runtime with transport fallback and tool registry.",
  "type": "module",
  "private": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "clean": "rimraf dist",
    "lint": "eslint \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "test": "vitest --run --passWithNoTests",
    "test:watch": "vitest"
  },
  "keywords": [
    "mcp",
    "magsag",
    "transport",
    "tools"
  ],
  "author": "",
  "license": "Apache-2.0",
  "dependencies": {
    "@magsag/shared-logging": "workspace:*"
  },
  "engines": {
    "node": ">=18.18"
  }
}
