{
  "name": "@magsag/mcp-server",
  "version": "0.1.0",
  "description": "TypeScript MCP server runtime with transport fallback and tool registry.",
  "type": "module",
  "private": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup --config tsup.config.ts --external @magsag/*",
    "clean": "rimraf dist",
    "lint": "eslint \"src/**/*.ts\"",
    "prepack": "pnpm run build",
    "prepare": "npm run build",
    "test": "vitest --run --passWithNoTests",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "mcp",
    "magsag",
    "transport",
    "tools"
  ],
  "author": "",
  "dependencies": {
    "@magsag/shared-logging": "workspace:*",
    "@modelcontextprotocol/sdk": "^1.21.1",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@magsag/mcp-client": "workspace:*",
    "eslint": "^8.57.0",
    "eslint-plugin-vitest": "^0.5.4",
    "rimraf": "^6.1.0",
    "typescript": "^5.4.5",
    "typescript-eslint": "^7.18.0",
    "vitest": "^2.1.4"
  },
  "engines": {
    "node": ">=18.18"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/artificial-intelligence-first/magsag.git",
    "directory": "packages/mcp-server"
  },
  "bugs": {
    "url": "https://github.com/artificial-intelligence-first/magsag/issues"
  },
  "homepage": "https://github.com/artificial-intelligence-first/magsag#readme",
  "license": "MIT"
}
