# Sample configuration for deploying @magsag/server
# Replace example domains with the exact frontend origins that should access the API.
NODE_ENV=production
MAGSAG_CORS_ORIGINS=https://app.example.com,https://admin.example.com
MAGSAG_CORS_ALLOW_CREDENTIALS=true
# Tune these values to your expected peak traffic profile.
MAGSAG_RATE_LIMIT_ENABLED=true
MAGSAG_RATE_LIMIT_QPS=10
MAGSAG_RATE_LIMIT_BURST=30
# Enable only when the server sits behind a trusted reverse proxy.
MAGSAG_RATE_LIMIT_TRUST_PROXY=false
# Flip to `memory` for emergency fallbacks; defaults to bounded in-memory store.
MAGSAG_SESSION_BACKEND=bounded
