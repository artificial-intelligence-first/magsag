{
  "name": "magsag-monorepo",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=18.18"
  },
  "packageManager": "pnpm@9.0.0",
  "scripts": {
    "build": "pnpm -r build",
    "lint": "pnpm -r lint",
    "typecheck": "pnpm -r typecheck",
    "test": "vitest --run",
    "docs:lint": "tsx tools/check-docs.ts",
    "catalog:validate": "tsx tools/validate-catalog.ts",
    "verify:vendor": "tsx tools/verify-vendor.ts",
    "mcp:codegen": "tsx packages/mcp-codegen/src/index.ts",
    "bench:mcp": "tsx tools/benchmarks/mcp-token-benchmark.ts",
    "test:watch": "vitest",
    "test:unit": "vitest --run --project unit",
    "test:integration": "vitest --run --project integration",
    "test:cli": "vitest --run --project cli",
    "test:e2e": "vitest --run --config vitest.config.ts tests/vitest/e2e/*.test.ts",
    "ci:lint": "pnpm -r lint",
    "ci:typecheck": "pnpm -r typecheck",
    "ci:build": "pnpm -r build",
    "ci:test": "vitest --run --config vitest.config.ts",
    "ci:e2e": "vitest --run --config vitest.config.ts tests/vitest/e2e/*.test.ts",
    "ci:size": "node tools/check_package_size.mjs",
    "changeset": "changeset",
    "version-packages": "changeset version && pnpm install --lockfile-only",
    "release": "pnpm build && pnpm changeset publish",
    "prepare:publish": "node tools/prepare-for-publish.mjs",
    "postinstall": "node tools/postinstall-build.mjs"
  },
  "devDependencies": {
    "@magsag/cli": "workspace:*",
    "@changesets/cli": "^2.29.7",
    "@types/node": "^20.16.5",
    "@types/split2": "^4.2.3",
    "@types/ws": "^8.18.1",
    "@vitest/coverage-v8": "^2.1.9",
    "eslint": "^8.57.0",
    "eslint-plugin-vitest": "^0.5.4",
    "tsup": "^8.2.4",
    "tsx": "^4.15.7",
    "typescript": "^5.4.5",
    "typescript-eslint": "^7.18.0",
    "vitest": "^2.1.4",
    "ws": "^8.18.0",
    "yaml": "^2.6.0"
  },
  "pnpm": {
    "overrides": {
      "esbuild": "^0.25.2",
      "vite": "^5.4.12"
    }
  }
}
